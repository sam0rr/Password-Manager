{var $passwordsTab = $_GET['tab'] ?? 'list'}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Gestion des mots de passe</h5>
    </div>

    <div class="card-body">
        <div class="d-md-none mb-3">
            <select class="form-select" id="password-tab-selector">
                <option value="?section=passwords&tab=list" {$passwordsTab == 'list' ? 'selected' : ''}>
                    Liste des mots de passe
                </option>
                <option value="?section=passwords&tab=add" {$passwordsTab == 'add' ? 'selected' : ''}>
                    Ajouter un mot de passe
                </option>
            </select>
        </div>

        <ul class="nav nav-pills mb-3 d-none d-md-flex">
            <li class="nav-item">
                <a class="nav-link {$passwordsTab == 'list' ? 'active' : ''}" href="?section=passwords&tab=list">
                    Liste des mots de passe
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {$passwordsTab == 'add' ? 'active' : ''}" href="?section=passwords&tab=add">
                    Ajouter un mot de passe
                </a>
            </li>
        </ul>

        {if $passwordsTab == 'list'}
            {include '../passwords/managePasswords.latte', passwordsUnlocked => $passwordsUnlocked, passwords => $passwords, form => $form}
        {elseif $passwordsTab == 'add'}
            {include '../passwords/addPassword.latte', form => $form}
        {/if}
    </div>
</div>

<div id="password-edit-modal"></div>
